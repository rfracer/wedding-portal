// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  name      String   @unique
  Company Company[]
}

model Company {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  category  String
  city      String
  phone     Int
  email     String
  photoURL  String
  website   String
  about     String
  offer     String
  price     String
  authorId  String   
  author    User     @relation(fields: [authorId], references: [id])
}
